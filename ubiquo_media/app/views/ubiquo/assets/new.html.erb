<h1><%= render :partial => 'title' %></h1>
<h2>
  <%= render :partial => "submenu" %>
</h2>
<%= error_messages_for 'asset' %>

<%= form_for(@asset, :as => :asset,
                     :url => ubiquo.assets_path,
                     :html => { :multipart => true }) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
    <div class="form-item-submit">
      <%= f.submit t('ubiquo.create'), :class => "bt-submit" %>
      <%= f.submit t('ubiquo.save_and_continue'),
                    :class => "bt-save-continue",
                    :id    => 'card_save_and_continue',
                    :name  => 'save_and_continue' %>
      <%= button_to_function t('ubiquo.back_to_list'), "document.location.href='#{ubiquo.assets_path}'", :class => "bt-back" %>
    </div>
<% end %>

<% content_for :sidebar do %>
  <%= uhook_new_asset_sidebar @asset %>
<% end %>
